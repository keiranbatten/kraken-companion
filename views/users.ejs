<%- include('layout.ejs'); %>
<div class="container">
    <div class="d-flex justify-content-between">
        <div></div>
        <h3>Users</h3>
        <a href="users/new"><i class="fs-4 bi-plus" title="Add User" style="font-size: 1.6rem;"></i></a>
    </div>
    <div class="w-100 mt-4">
        <% users.forEach(u => { %>
            <div class="d-flex w-100">
                <div class="col-sm-4"><%= u.name %></div>
                <div class="col-sm-6"><%= u.email %></div>
                <div class="col-sm-2">
                    <a href="users/<%= u._id %>"><i class="fs-4 bi-pencil"></i></a>
                    <% if (u._id.toString() != user._id.toString()) { %>
                    <a href="#" onclick="deleteUser('<%= u._id %>')"><i class="fs-4 bi-trash"></i></a>
                    <% } %>
                </div>
            </div>
            <hr class="my-2">
        <% }) %>
    </div>
</div>

</div>
</div>

<script>
    function deleteUser(id) {
        let conf = confirm("Are you sure you want to delete this user?");
        if (conf) {
            fetch(`/user/${id}`, {method: 'DELETE', mode: 'same-origin', cache: 'no-cache', credentials: 'same-origin', headers: {'Content-Type': 'application/json'}}).then(res => {
            window.location.reload();
        });
        }
    }
</script>

</body>
</html>